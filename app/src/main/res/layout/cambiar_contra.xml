<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/lucidagrande"
            android:text="Contraseña"
            android:textColor="@color/black"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/lucidagrande"
            android:text="Tu contraseña debe tener más de seis caracteres e incluir una combinación de números, letras y caracteres especiales."
            android:textColor="@color/black" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="#000000"
            android:textColorHint="#7D7B7B"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#7E7D7D">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/contra_actual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:fontFamily="@font/lucidagrande"
                android:hint="Contraseña actual"
                android:password="true"
                android:textColor="@color/black"
                android:textColorHint="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="#000000"
            android:textColorHint="#7D7B7B"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#7E7D7D">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/contra_nueva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lucidagrande"
                android:hint="Contraseña nueva"
                android:password="true"
                android:textColor="@color/black"
                android:textColorHint="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"

            android:textColor="#000000"
            android:textColorHint="#7D7B7B"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#7E7D7D">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/repe_contra_nueva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lucidagrande"
                android:hint="Repetir contraseña nueva"
                android:password="true"
                android:textColorHint="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/cambiar_contra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/bordes_redondos_botton"
            android:backgroundTint="#555555"
            android:fontFamily="@font/lucidagrande"
            android:text="Cambiar contraseña"
            android:textColor="@color/white" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>