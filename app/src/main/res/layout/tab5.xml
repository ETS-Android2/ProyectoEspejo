<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".HomeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/lucidagrande"
            android:text="Ajustes de usuario"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/perfil_ajustes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/perfil"
            android:fontFamily="@font/lucidagrande"
            android:onClick="abrirPerfil"
            android:paddingLeft="20dp"
            android:text=" Mi perfil"
            android:textAlignment="viewStart"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/seguridad"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/placa"
            android:fontFamily="@font/lucidagrande"
            android:onClick="abrirSeguridad"
            android:paddingLeft="20dp"
            android:text=" Seguridad"
            android:textAlignment="viewStart"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/privacidad"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/firma"
            android:fontFamily="@font/lucidagrande"
            android:paddingLeft="20dp"
            android:text="  Privacidad"
            android:textAlignment="viewStart"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/preferencias"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/preferencias"
            android:fontFamily="@font/lucidagrande"
            android:onClick="AbrirPreferencias"
            android:paddingLeft="20dp"
            android:text="  Preferencias de usuario"
            android:textAlignment="viewStart"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/escanearPikku"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/pikku"
            android:fontFamily="@font/lucidagrande"
            android:paddingLeft="20dp"
            android:text=" Escanear Pikku"
            android:textAlignment="viewStart"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/conectarPikku"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/pikku"
            android:enabled="false"
            android:fontFamily="@font/lucidagrande"
            android:paddingLeft="20dp"
            android:text=" Conectar Pikku"
            android:textAlignment="viewStart"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/informacion"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/info_blanco"
            android:fontFamily="@font/lucidagrande"
            android:onClick="abrirInformación"
            android:paddingLeft="20dp"
            android:text="  Información"
            android:textAlignment="viewStart"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/ayuda"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/pregunta"
            android:fontFamily="@font/lucidagrande"
            android:paddingLeft="20dp"
            android:text="  Ayuda"
            android:textAlignment="viewStart"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/acercade"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/gente"
            android:fontFamily="@font/lucidagrande"
            android:onClick="lanzarAcercaDe"
            android:paddingLeft="20dp"
            android:text="  Acerca de"
            android:textAlignment="viewStart"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>