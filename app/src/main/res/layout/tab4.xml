<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7FFFFFF"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/perfilCorreo"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:drawableRight="@drawable/flecha"
        android:fontFamily="@font/lucidagrande"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="No logeado"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textIsSelectable="false"
        android:textSize="18sp"
        app:drawableTint="#6D000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/perfilApellido" />

    <TextView
        android:id="@+id/perfilApellido"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:drawableRight="@drawable/flecha"
        android:fontFamily="@font/lucidagrande"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="No logeado"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textIsSelectable="false"
        android:textSize="18sp"
        app:drawableTint="#6D000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/perfilNombre" />

    <TextView
        android:id="@+id/perfilNombre"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="64dp"
        android:background="#FFFFFF"
        android:drawableRight="@drawable/flecha"
        android:fontFamily="@font/lucidagrande"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="No logeado"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textIsSelectable="false"
        android:textSize="18sp"
        app:drawableTint="#6D000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/perfilFoto" />

    <Button
        android:id="@+id/cerrarSesion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="#000000"
        android:fontFamily="@font/lucidagrande"
        android:onClick="logout"
        android:text="Cerrar sesion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/perfilFoto"
        android:layout_width="132dp"
        android:layout_height="133dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bordes_redondos"
        android:backgroundTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_account_circle_24" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/correoNoVerificado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/perfilCorreo"
        tools:layout_editor_absoluteX="-16dp">

        <ImageView
            android:id="@+id/alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/alert_mini24"
            app:tint="#FA0707" />

        <TextView
            android:id="@+id/correoVerificado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lucidagrandebold"
            android:text="  Verifica tu correo"
            android:textColor="#FA0707"
            app:layout_constraintBottom_toBottomOf="@+id/alert"
            app:layout_constraintStart_toEndOf="@+id/alert"
            app:layout_constraintTop_toTopOf="@+id/alert" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>